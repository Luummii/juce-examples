{
  "version": "2.0.0",
  "shell": {
    "task": true
  },
  "tasks": [
    {
      "type": "shell",
      "label": "Build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "command": "cd ${workspaceRoot}/Builds/LinuxMakefile/ && make -j -s 2>&1",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "type": "shell",
      "label": "Run",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "command": "cd ${workspaceRoot}/Builds/LinuxMakefile/build && ./AudioVisualiser",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "type": "shell",
      "label": "Build & Run",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "command": "cd ${workspaceRoot}/Builds/LinuxMakefile/ && make -j -s 2>&1 && cd build && ./AudioVisualiser",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}
